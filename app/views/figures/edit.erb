<form method='POST' action='/figures/<%= @figure.id %>'>
  <input type='hidden' id='hidden' name='_method' value='PATCH'>
  <p><input type='text' name='figure[name]' id='figure_name' value='<%= @figure.name %>'></p>
  <h3>Titles</h3>
  <% @titles.each do |title| %>
    <%= title.name %><input type='checkbox' name='figure[title_ids][]' value='<%= title.id %>' id='title_<%= title.id %>' <%= 'checked' if @figure.titles.include?(title) %>><br>
  <% end %>
  <h3>Create New Title:</h3>
  <input type='text' name='title[name]' id='new_title' placeholder='Name'>
  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <br><%= landmark.name %><input type='checkbox' name='figure[landmark_ids][]' value=<%= landmark.id %> id='landmark_<%= landmark.id %>' <%= 'checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>
  <h3>Create New Landmark:</h3>
  <input type='text' name='landmark[name]' id='new_landmark' placeholder='Name'>
  <input type='text' name='landmark[year]' placeholder='Year'>
  <input type='submit' value='Edit Figure'>
</form>